<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle" android:useLevel="false">
            <padding android:bottom="1dp" android:left="2dp" android:right="2dp" android:top="1dp" />

            <!-- 主内容 -->
            <solid android:color="@color/mtf_gray_400" />

            <!-- 边框 -->
            <stroke android:width="0.5dp" android:color="@color/blue" />
            <size android:width="20dp" android:height="20dp" />
            <corners android:radius="5dp" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle" android:useLevel="false">
            <padding
                android:bottom="1dp"
                android:left="2dp"
                android:right="2dp"
                android:top="1dp" />

            <!-- 主内容 -->
            <solid android:color="@android:color/white" />

            <!-- 边框 -->
            <stroke
                android:width="0.5dp"
                android:color="@color/blue" />
            <!--<size-->
                <!--android:width="20dp"-->
                <!--android:height="20dp" />-->
            <corners android:radius="5dp" />
        </shape>
    </item>
</selector>