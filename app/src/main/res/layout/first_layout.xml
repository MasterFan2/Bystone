<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           >
           <android.support.v4.view.ViewPager
            android:id="@+id/vPager"
            android:layout_width="wrap_content"
            android:layout_height="150dp"

            />
           <com.proton.library.widget.CircleIndicator
               android:id="@+id/view_pager_indicator"
               android:layout_width="wrap_content"
               android:layout_height="20dp"
               android:layout_alignParentBottom="true"
               android:layout_centerHorizontal="true"
               android:layout_marginBottom="20dp"
               android:layout_marginRight="20dp"
               android:background="#25000000"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/home_yzq"
               android:text="今日阴转晴"
               android:textSize="15dp"
               android:layout_marginTop="50dp"
               android:layout_marginLeft="45dp"
               android:textColor="#FCFCF5"

               />

           <TextView
               android:id="@+id/home_byxc"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="不易洗车"
               android:textSize="15dp"
               android:layout_marginTop="90dp"
               android:layout_marginLeft="45dp"
               android:textColor="#FCFCF5"

               />

           <TextView
               android:layout_width="2dp"
               android:layout_height="50dp"
               android:background="@color/somber"
               android:layout_marginTop="55dp"
               android:layout_marginLeft="150dp"
               android:textColor="#FCFCF5"
               />

           <TextView
               android:id="@+id/home_ssd"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="20℃-25℃"
               android:textSize="15dp"
               android:layout_marginTop="70dp"
               android:layout_marginLeft="180dp"
               android:textColor="#FCFCF5"

               />

       </RelativeLayout>
       <include layout="@layout/tendp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            >
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/home_smb"
            android:layout_weight="1">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/icon_mai_hot1"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="9dp"
                />
            <TextView
                android:id="@+id/home_smby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上门保养"
                android:textColor="#292929"
                android:layout_marginLeft="95dp"
                android:layout_marginTop="10dp"
                android:textSize="17sp"
                />
            <TextView
                android:layout_width="95dp"
                android:layout_height="150dp"
                android:text="到店价格一样，还有免费检测"
                android:textColor="#878787"
                android:layout_marginLeft="95dp"
                android:layout_marginTop="40dp"
                android:maxLines="2"


                />
            </RelativeLayout>
            <TextView
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#ebebeb"

                />
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/home_scgw"
                android:layout_weight="1">
                <ImageView
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:src="@mipmap/icon_mai_hot2"
                android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"

                />
            <TextView
                android:id="@+id/Home_ddby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商城购物"
                android:textColor="#292929"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="10dp"
                android:textSize="17sp"
                />
            <TextView
                android:layout_width="95dp"
                android:layout_height="150dp"
                android:text="厂家直销专业汽车配件"
                android:textColor="#878787"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="40dp"
                android:maxLines="2"

                />

                </RelativeLayout>

        </LinearLayout>
       <include layout="@layout/tendp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="40dp"

                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_redline"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="6dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最新推荐"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:layout_marginLeft="15dp"
                />
          <!--  <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更多"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="30dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_right"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                />-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/somber"
                android:layout_marginTop="46dp"
                />

        </RelativeLayout>

       <TextView
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:background="#ebebeb" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
        <GridView
            android:id="@+id/home_gridView"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:numColumns="3"
            android:stretchMode="columnWidth"
            />
        </RelativeLayout>
       <include layout="@layout/tendp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_redline"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="6dp"
                />

            <TextView
                android:id="@+id/bt5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今日特价"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:layout_marginLeft="15dp"
                />
            <!--<TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更多"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="30dp"

                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_right"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"

                />-->


        </RelativeLayout>

       <TextView

           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:background="@color/somber"

           />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <GridView
                android:id="@+id/home_gridView2"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:numColumns="3"
                android:stretchMode="columnWidth"
                />
           <!-- <TextView
                android:layout_width="2dp"
                android:layout_height="110dp"
                android:background="#ebebeb"
                android:layout_marginLeft="110dp"
                />

            <TextView
                android:layout_width="2dp"
                android:layout_height="110dp"
                android:background="#ebebeb"
                android:layout_marginLeft="230dp"
                />-->


        </RelativeLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_mai_line"
            />


        <!--<include layout="@layout/listviewfist"/>-->
    </LinearLayout>

</ScrollView>
</LinearLayout>