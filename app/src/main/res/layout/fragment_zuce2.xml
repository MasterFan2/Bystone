<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context="com.proton.bystone.ui.main.tab.MeFragment">

        <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_return"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"


                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="注册"
                    android:paddingLeft="150dp"
                    android:layout_centerVertical="true"
                    android:textSize="18sp"
                    android:textColor="#878787"
                    />

            </RelativeLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_mai_line"

                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="59sp"
                android:orientation="horizontal"
                android:padding="5dp"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_pwd"
                    android:paddingTop="25dp"
                    android:layout_marginLeft="10dp"

                    />
                <EditText
                    android:layout_width="240sp"
                    android:layout_height="wrap_content"
                    android:hint="请输入6到8位数字密码"
                    android:textSize="15sp"
                    android:id="@+id/editText"
                    android:paddingTop="25dp"
                    android:paddingLeft="45dp"
                    android:background="@null" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_eyes"
                    android:id="@+id/bt"
                    android:layout_marginTop="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#ebebeb"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/bt"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#ebebeb"

                android:layout_below="@id/et2"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:orientation="horizontal"
                android:padding="5dp"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_inviter"
                    android:paddingTop="25dp"
                    android:layout_marginLeft="10dp"

                    />
                <EditText
                    android:layout_width="240sp"
                    android:layout_height="wrap_content"
                    android:hint="请输入短信验证码"
                    android:textSize="15sp"
                    android:id="@+id/et2"
                    android:paddingTop="25dp"
                    android:paddingLeft="45dp"
                    android:background="@null" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#ebebeb"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/et2"/>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#ebebeb"

                android:layout_below="@id/et2"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="注：你和对方都能获得积分，没有可以不填"
                    android:layout_toRightOf="@id/cb"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="55dp"
                    android:textSize="15sp"
                    />
            </RelativeLayout>



            <Button
                android:padding="20dp"
                android:layout_width="337dp"
                android:layout_height="wrap_content"
                android:text="注册"
                android:id="@+id/bt2"
                android:layout_gravity="center_horizontal"
                android:textSize="18sp"
                android:background="@drawable/yuanjiao2"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70sp"
                android:orientation="horizontal"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:text="有问题？找客服"
                    android:layout_marginTop="30dp"
                    android:textSize="26px"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"/>


            </RelativeLayout>



        </LinearLayout>

    </FrameLayout>


