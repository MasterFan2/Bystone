<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <com.proton.library.widget.MTFTitleView
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:rightButtonHide="true"
        app:titleBackground="@color/mtf_gray_900"
        app:titleText="我的订单"
        app:titleTxtColor="@android:color/white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <TextView
            android:id="@+id/my_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textSize="14sp"
            android:textColor="#878787"
            android:layout_centerVertical="true"

            />
        <TextView
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="#ebebeb"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/my_all"
            />

        <TextView
            android:id="@+id/my_all2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待付款"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="20dp"
            android:textSize="14sp"
            android:textColor="#878787"
            android:layout_centerVertical="true"

            />
        <TextView
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="#ebebeb"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/my_all2"
            />

        <TextView
            android:id="@+id/my_all3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待保养"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="20dp"
            android:textSize="14sp"
            android:textColor="#878787"
            android:layout_centerVertical="true"

            />
        <TextView
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="#ebebeb"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/my_all3"
            />

        <TextView
            android:id="@+id/my_all4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待收货"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="20dp"
            android:textSize="14sp"
            android:textColor="#878787"
            android:layout_centerVertical="true"

            />
        <TextView
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="#ebebeb"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/my_all4"
            />

        <TextView
            android:id="@+id/my_all5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待评价"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="20dp"
            android:textSize="14sp"
            android:textColor="#878787"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_mai_line"
        />

    <ListView
        android:id="@+id/shop_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />


</LinearLayout>