<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


 <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content">

         <ImageView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@mipmap/icon_mai_unselected"
             android:layout_marginLeft="10dp"
             android:layout_marginTop="10dp"
             android:layout_centerVertical="true"/>
         <TextView
             android:id="@+id/shop_name"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="羽邵天"
             android:layout_marginLeft="45dp"
             android:layout_marginTop="5dp"
             android:textSize="12sp"
             android:textColor="#292929"
             />
         <TextView
             android:id="@+id/shop_date"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="2016-5-3"
             android:layout_marginLeft="45dp"
             android:layout_marginTop="20dp"
             android:textSize="10sp"
             android:textColor="#292929"
             />
         <ImageView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@mipmap/icon_mai_highpraise"
             android:layout_marginLeft="10dp"
             android:layout_marginTop="10dp"
             android:layout_centerVertical="true"
             android:layout_alignParentRight="true"
             android:layout_marginRight="10dp"/>
     </RelativeLayout>
     <TextView
         android:id="@+id/shop_pingjia"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="很好啊。性价比高啊，穿着衣服就是比较透吧，不薄，但恨透，针织的工艺"
         android:layout_marginLeft="10dp"
         android:layout_marginTop="5dp"
         android:textSize="12sp"
         android:textColor="#292929"
         />
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal">
         <GridView
             android:id="@+id/home_gridView"
             android:layout_width="match_parent"
             android:layout_height="100dp"
             android:numColumns="3"
             android:stretchMode="columnWidth"
             />
     </LinearLayout>
     <TextView
         android:layout_width="match_parent"
         android:layout_height="2dp"
         android:background="#ebebeb"
         />

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content">

         <ImageView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@mipmap/icon_mai_unselected"
             android:layout_marginLeft="10dp"
             android:layout_marginTop="10dp"
             android:layout_centerVertical="true"/>
         <TextView
             android:id="@+id/shop_yxt"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="羽邵天"
             android:layout_marginLeft="45dp"
             android:layout_marginTop="5dp"
             android:textSize="12sp"
             android:textColor="#292929"
             />
         <TextView
             android:id="@+id/shop_shijian"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="2016-5-3"
             android:layout_marginLeft="45dp"
             android:layout_marginTop="20dp"
             android:textSize="10sp"
             android:textColor="#292929"
             />
         <ImageView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@mipmap/icon_mai_highpraise"
             android:layout_marginLeft="10dp"
             android:layout_marginTop="10dp"
             android:layout_centerVertical="true"
             android:layout_alignParentRight="true"
             android:layout_marginRight="10dp"/>
     </RelativeLayout>
     <TextView
         android:id="@+id/shop_pl"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="很好啊。性价比高啊，穿着衣服就是比较透吧，不薄，但恨透，针织的工艺"
         android:layout_marginLeft="10dp"
         android:layout_marginTop="5dp"
         android:textSize="12sp"
         android:textColor="#292929"
         />
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal">
     </LinearLayout>
     <TextView
         android:layout_width="match_parent"
         android:layout_height="2dp"
         android:background="#ebebeb"
         />
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="【店主回复】 ："
             android:layout_marginLeft="10dp"
             android:layout_centerVertical="true"
             android:textSize="12sp"
             android:textColor="#292929"
             />

         <TextView
             android:id="@+id/shop_huifu2"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="很好啊。性价比高啊，穿着衣服就是比较透吧，不薄，但恨透，针织的工艺"
             android:layout_marginLeft="10dp"
             android:layout_marginTop="5dp"
             android:textSize="12sp"
             android:textColor="#292929"
             android:layout_toRightOf="@id/shop_huifu2"
             />


     </RelativeLayout>

</LinearLayout>