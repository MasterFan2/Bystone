<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--app:rightButtonIcon="@mipmap/icon_mine_pluscar"-->
    <com.proton.library.widget.MTFTitleView
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:rightButtonText="添加"
        app:rightButtonTextColor="@color/blue"
        app:titleBackground="@color/mtf_gray_900"
        app:titleText="我的爱车"
        app:titleTxtColor="@android:color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/my_car_verify_tips_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="XX"
            android:textColor="@color/mtf_gray_800"
            android:padding="10dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ListView
                android:id="@+id/my_car_list_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@color/mtf_gray_300"
                android:dividerHeight="8dp"
                />
            <LinearLayout
                android:id="@+id/my_car_no_data_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="输入爱车信息, 就能获取保养方案"
                    />
                <Button
                    android:id="@+id/my_car_add_my_car_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="添加爱车"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
