<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.proton.library.widget.MTFTitleView
            android:id="@+id/titleView"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:titleBackground="@color/mtf_gray_900"
            app:titleText="账号密码登录"
            app:titleTxtColor="@android:color/white" />



        <EditText
            android:id="@+id/login_uname_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_centerVertical="true"
            android:background="@null"
            android:drawableLeft="@mipmap/icon_user"
            android:drawablePadding="8dp"
            android:hint="请输入手机号"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:paddingBottom="15dp"
            android:paddingLeft="16dp"
            android:paddingTop="15dp"
            android:singleLine="true"
            android:text="18225026697"
            android:textSize="15sp" />

        <View style="@style/DivideLine"/>

        <EditText
            android:id="@+id/login_pwd_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:drawableLeft="@mipmap/icon_pwd"
            android:drawablePadding="8dp"
            android:hint="请输入6-8位数字密码"
            android:imeOptions="actionDone"
            android:paddingBottom="15dp"
            android:paddingLeft="16dp"
            android:paddingTop="15dp"
            android:singleLine="true"
            android:text="666888"
            android:textSize="15sp" />

        <View style="@style/DivideLine"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </RelativeLayout>

        <Button
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="35dp"
            android:background="@drawable/btn_blue_selector"
            android:text="登陆"
            android:textColor="@android:color/white"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/login_forget_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@null"
                android:text="忘记密码"
                android:padding="10dp"
                android:textColor="@color/mtf_gray_800"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/login_modify_pwd_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:text="更改密码"
                android:padding="10dp"
                android:textColor="@color/mtf_gray_800"
                android:textSize="15sp" />
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>


