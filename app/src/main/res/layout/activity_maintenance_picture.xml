<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.proton.library.widget.MTFTitleView
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:rightButtonHide="true"
        app:titleBackground="@color/mtf_gray_900"
        app:titleText="爱车照片"
        app:titleTxtColor="@android:color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                >
                <View
                    android:id="@+id/maintenance_picture_before_red_view"
                    android:layout_width="2dp"
                    android:layout_height="20dp"
                    android:background="@color/red_error"
                    />
                <TextView
                    android:id="@+id/maintenance_picture_before_label_txt"
                    android:layout_toRightOf="@id/maintenance_picture_before_red_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextHeader"
                    android:text="保养前"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:id="@+id/maintenance_picture_before_more_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextDesc"
                    android:text="更多 > "
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <View style="@style/DivideLine"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="3"
                >
                <ImageView
                    android:id="@+id/maintenance_picture_before_one_img"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_launcher"
                    android:layout_weight="1"
                    />
                <ImageView
                    android:id="@+id/maintenance_picture_before_two_img"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_launcher"
                    android:layout_weight="1"
                    />
                <ImageView
                    android:id="@+id/maintenance_picture_before_three_img"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_launcher"
                    android:layout_weight="1"
                    />
            </LinearLayout>
        </LinearLayout>

        <View style="@style/DivideLine_B"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                >
                <View
                    android:id="@+id/maintenance_picture_ing_red_view"
                    android:layout_width="2dp"
                    android:layout_height="20dp"
                    android:background="@color/red_error"
                    />
                <TextView
                    android:layout_toRightOf="@id/maintenance_picture_ing_red_view"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextHeader"
                    android:text="保养中"
                    />
                <TextView
                    android:id="@+id/maintenance_picture_ing_more_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextDesc"
                    android:text="更多 > "
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <View style="@style/DivideLine"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="3"
                >
                <ImageView
                    android:id="@+id/maintenance_picture_ing_one_img"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_launcher"
                    android:layout_weight="1"
                    />
                <ImageView
                    android:id="@+id/maintenance_picture_ing_two_img"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_launcher"
                    android:layout_weight="1"
                    />
                <ImageView
                    android:id="@+id/maintenance_picture_ing_three_img"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_launcher"
                    android:layout_weight="1"
                    />
            </LinearLayout>
        </LinearLayout>

        <View style="@style/DivideLine_B"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                >
                <View
                    android:id="@+id/maintenance_picture_after_red_view"
                    android:layout_width="2dp"
                    android:layout_height="20dp"
                    android:background="@color/red_error"
                    />
                <TextView
                    android:layout_toRightOf="@id/maintenance_picture_after_red_view"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextHeader"
                    android:text="保养后"
                    />
                <TextView
                    android:id="@+id/maintenance_picture_after_more_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextDesc"
                    android:text="更多 > "
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <View style="@style/DivideLine"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="3"
                >
                <ImageView
                    android:id="@+id/maintenance_picture_after_one_img"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_launcher"
                    android:layout_weight="1"
                    />
                <ImageView
                    android:id="@+id/maintenance_picture_after_two_img"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_launcher"
                    android:layout_weight="1"
                    />
                <ImageView
                    android:id="@+id/maintenance_picture_after_three_img"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_launcher"
                    android:layout_weight="1"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
