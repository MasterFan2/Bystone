<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_service_maint_name_txt"
            style="@style/TextHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="刹车片" />

        <TextView
            android:id="@+id/item_service_maint_id_txt"
            style="@style/TextHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:text="出厂编号XXX78-9" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/item_service_maint_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_service_maint_logo_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/ic_launcher" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center_vertical"
                >

                <TextView
                    android:id="@+id/item_service_maint_price_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥420.00"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_alignParentRight="true"
                    />
                <LinearLayout
                    android:layout_toLeftOf="@id/item_service_maint_price_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/item_service_maint_detail_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="美孚金美订单号合成机油单号合成机油单号合成机油单号"
                        style="@style/TextHeader"
                        />
                    <TextView
                        android:id="@+id/item_service_maint_desc_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="机油单号合成机油单号合成机油单号"
                        android:layout_marginTop="8dp"
                        style="@style/TextDesc"
                        />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/item_service_maint_hourly_wage_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="工时费\t\t￥50.00"
            android:layout_marginTop="8dp"
            style="@style/TextDesc"
            android:padding="8dp"
            android:gravity="right"
            />
    </LinearLayout>

</LinearLayout>