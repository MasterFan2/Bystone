<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context="com.proton.bystone.ui.main.tab.MeFragment">

        <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_return"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="无密码快捷登陆"
                    android:paddingLeft="100dp"
                    android:layout_centerVertical="true"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/tvzuce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="注册"
                    android:paddingLeft="280dp"
                    android:textSize="18sp"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:textColor="@color/zift"

                    />
            </RelativeLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_mai_line"

                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="59sp"
                android:orientation="horizontal"
                android:padding="5dp"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_user"
                    android:layout_marginTop="31dp"
                    android:layout_marginLeft="8dp"
                    />
                <EditText
                    android:id="@+id/editText"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:hint="请输入手机号"
                    android:textSize="15sp"
                    android:paddingTop="31dp"
                    android:paddingLeft="40dp"
                    android:background="@null" />
                <Button
                    android:id="@+id/bt"
                    android:layout_width="86dp"
                    android:layout_height="35dp"
                    android:text="获取验证码"
                    android:textSize="10sp"
                    android:background="@drawable/yuanjiao2"
                    android:textColor="#ffff"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    />

            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#ebebeb"

                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:orientation="horizontal"
                android:padding="5dp"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_code"
                    android:paddingTop="25dp"
                    android:layout_marginLeft="10dp"
                    />
                <EditText
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:hint="请输入短信验证码"
                    android:textSize="15sp"
                    android:id="@+id/et2"
                    android:paddingTop="25dp"
                    android:paddingLeft="40dp"
                    android:background="@null" />


            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#ebebeb"

                />


            <Button
                android:padding="20dp"
                android:layout_width="337dp"
                android:layout_height="wrap_content"
                android:text="登陆"
                android:id="@+id/button"
                android:layout_gravity="center_horizontal"
                android:textSize="15sp"
                android:background="@drawable/yuanjiao2"
                android:layout_marginTop="25dp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                >
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:text="有问题找客服"
                    android:textSize="15sp"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:layout_marginLeft="10dp"
                    />

                <Button
                    android:id="@+id/but"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="账号密码登陆"
                    android:textSize="15sp"
                    android:layout_marginLeft="235dp"
                    android:layout_centerVertical="true"
                    android:background="@null"/>
            </RelativeLayout>



        </LinearLayout>

    </FrameLayout>


