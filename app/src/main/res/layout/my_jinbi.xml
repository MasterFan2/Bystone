<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

  <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_return"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"


            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的金币"
            android:paddingLeft="150dp"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            android:textColor="#878787"
            />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#ebebeb"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="金币"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"

            android:textSize="18sp"
            android:textColor="#878787"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="恭喜你金币超过了"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="60dp"
            android:textSize="14sp"
            android:textColor="#878787"

            />
        <TextView
            android:id="@+id/my_bl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="57%"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="60dp"
            android:textSize="14sp"
            android:textColor="#878787"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="的车友"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="60dp"
            android:textSize="14sp"
            android:textColor="#878787"

            />

        <TextView
            android:id="@+id/my_jb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="390"
            android:paddingLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:textSize="30sp"
            android:textColor="#3c85ee"
            />

    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_mai_line"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="224dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消费金币"
            android:paddingLeft="90dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@mipmap/icon_mine_blue"

            android:textSize="15sp"
            android:textColor="#878787"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收入金币"
            android:paddingLeft="210dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@mipmap/icon_mine_yellow"

            android:textSize="15sp"
            android:textColor="#878787"
            />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这个星期你又增加了50个金币"
            android:paddingLeft="110dp"
            android:layout_marginTop="180dp"


            android:textSize="15sp"
            android:textColor="#878787"
            />




    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_mai_line"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="金币规则"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"

            android:textSize="15sp"
            android:textColor="@color/black"
            />



    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#ebebeb"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="多邀请好友加入就能获得更多积分哟,是不是很划算，
