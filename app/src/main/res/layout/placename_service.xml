<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="59dp">
            <ImageView
                android:id="@+id/Home_fh"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_return"
                android:layout_centerVertical="true"
                />

            <AutoCompleteTextView
                android:id="@+id/Home_Search"
                android:layout_width="310dp"
                android:layout_height="28dp"
                android:hint="搜索地名或、服务"
                android:background="@drawable/edtextyuan"
                android:textSize="14dp"
                android:layout_marginLeft="30dp"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:completionThreshold="1"

                />
            <ImageView
                android:id="@+id/home_serv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_search"
                android:layout_marginLeft="50dp"
                android:layout_centerVertical="true"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:textColor="#ebebeb"
                android:layout_marginTop="55dp"
                />



        </RelativeLayout>

    <RelativeLayout

           android:layout_width="wrap_content"
           android:layout_height="45dp"
           >
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="你是不是在找"
               android:textSize="15sp"
               android:layout_marginTop="15sp"
               android:layout_marginLeft="12dp"
              />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/somber"/>


      </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/somber"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <Button
            android:id="@+id/bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="空气滤心"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="10dp"

            />
        <Button
            android:id="@+id/home_yx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="音响"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            />
        <Button
            android:id="@+id/home_jylx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="机油滤心"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            />
        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <Button
            android:id="@+id/yx2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="音响"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="10dp"
            />
        <Button
            android:id="@+id/home_fhy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="防滑油"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            />
        <Button
            android:id="@+id/home_kqnx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="空气滤心"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>






</LinearLayout>