<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    >

    <LinearLayout
        android:id="@+id/item_shop_car_header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        >

        <View
            android:id="@+id/item_shop_car_check_view"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@mipmap/icon_checkbox_sel" />

        <TextView
            android:id="@+id/item_shop_car_title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:text="机油" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:background="@color/mtf_gray_400"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/item_shop_car_logo_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_launcher"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="8dp"
            >
            <TextView
                android:id="@+id/item_shop_car_head_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="美孚 合成机油SMM-054-09"
                android:maxLines="2"
                android:ellipsize="end"
                style="@style/TextHeader"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:id="@+id/item_shop_car_desc_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="让你的爱国每年少做一次保养"
                    android:maxLines="2"
                    android:ellipsize="end"
                    style="@style/TextDesc"
                    />
                <TextView
                    android:id="@+id/item_shop_car_count_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="X 1"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/item_shop_car_price_txt"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextBlue"
                android:text="￥330.00"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>