<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:orientation="vertical">
    <TextView
        android:id="@+id/search_header_city_txt"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:text="黄泥"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:drawablePadding="8dp"
        android:drawableRight="@mipmap/icon_menu"
        />
    <ImageView
        android:id="@+id/search_header_scan_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_tracing"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:padding="10dp"
        />

    <LinearLayout
        android:id="@+id/search_header_search_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/search_header_scan_img"
        android:layout_toRightOf="@+id/search_header_city_txt"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:background="@drawable/edtextyuan"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="10dp"
            android:layout_height="15dp"
            android:src="@mipmap/icon_search"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="搜索商品..."
            android:layout_centerVertical="true"
            android:padding="7dp"
            android:textSize="10sp"

            />

    </LinearLayout>
</RelativeLayout>