<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/mtf_gray_100"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/item_maintance_combo_header_txt"
            style="@style/TextHeader"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="奥迪A8推荐套餐" />

        <TextView
            android:id="@+id/item_maintance_combo_choose_more_txt"
            style="@style/TextDesc"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="查看更多车型 > " />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.15dp"
        android:background="@color/mtf_gray_300"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_maintance_combo_price_txt"
            style="@style/TextBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="会员价:￥1038" />

        <TextView
            android:id="@+id/item_maintance_combo_old_price_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="原价:￥1738" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_maintance_combo_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <ImageView
                android:id="@+id/item_maintance_combo_content_1_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/ic_launcher"
                />
            <TextView
                android:id="@+id/item_maintance_combo_content_1_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="机油"
                android:gravity="center"
                android:singleLine="true"
                />
            <TextView
                android:id="@+id/item_maintance_combo_price_1_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="￥103"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:textColor="@color/blue"
                android:singleLine="true"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon_add"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <ImageView
                android:id="@+id/item_maintance_combo_content_2_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/ic_launcher"
                />
            <TextView
                android:id="@+id/item_maintance_combo_content_2_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="机油￥103"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/item_maintance_combo_price_2_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="￥103"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:textColor="@color/blue"
                android:singleLine="true"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon_add"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <ImageView
                android:id="@+id/item_maintance_combo_content_3_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/ic_launcher"
                />
            <TextView
                android:id="@+id/item_maintance_combo_content_3_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="机油￥103"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/item_maintance_combo_price_3_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="￥103"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:textColor="@color/blue"
                android:singleLine="true"
                />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:background="@color/mtf_gray_300"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <Button
            android:id="@+id/item_maintance_combo_del_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除此套餐" />

        <Button
            android:id="@+id/item_maintance_combo_bespeak_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="去预约" />
    </RelativeLayout>
</LinearLayout>