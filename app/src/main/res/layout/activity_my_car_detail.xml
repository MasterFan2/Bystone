<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.proton.library.widget.MTFTitleView
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:titleBackground="@color/mtf_gray_900"
        app:titleText="我的爱车详情"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- root -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextHeader"
                        android:padding="10dp"
                        android:text="提醒"
                        />
                    <LinearLayout
                        android:id="@+id/my_car_detail_tips_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:id="@+id/my_car_detail_maintenance_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="【保养提醒】车事通小助手温馨提示:8月5日做保养哦"
                            android:textColor="@color/blue"
                            />
                        <View style="@style/DivideLine"/>
                        <TextView
                            android:id="@+id/my_car_detail_next_maintenance_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="下次做保养的时间为8月5日，或达到5200公里"
                            />
                    </LinearLayout>
                    <Button
                        android:id="@+id/my_car_detail_enable_tips_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:text="开启保养提醒"
                        />
                </LinearLayout>

                <View style="@style/DivideLine_B"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextHeader"
                        android:text="品牌"
                        />
                    <TextView
                        android:id="@+id/my_car_detail_brand_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextDesc"
                        android:layout_alignParentRight="true"
                        android:text="宝马"
                        />
                </RelativeLayout>

                <View style="@style/DivideLine"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextHeader"
                        android:text="年款"
                        />
                    <TextView
                        android:id="@+id/my_car_detail_year_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextDesc"
                        android:layout_alignParentRight="true"
                        android:text="2016"
                        />
                </RelativeLayout>

                <View style="@style/DivideLine"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    >
                    <TextView
                        android:id="@+id/my_car_detail_car_no_label_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextHeader"
                        android:text="车牌"
                        />
                    <TextView
                        android:id="@+id/my_car_detail_normal_maintenance_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/my_car_detail_car_no_label_txt"
                        android:layout_marginLeft="8dp"
                        android:text=""
                        />
                    <TextView
                        android:id="@+id/my_car_detail_car_no_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextDesc"
                        android:layout_alignParentRight="true"
                        android:text="渝B XX009"
                        />
                </RelativeLayout>

                <View style="@style/DivideLine"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextHeader"
                        android:text="发动机号"
                        />
                    <TextView
                        android:id="@+id/my_car_detail_engine_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextDesc"
                        android:layout_alignParentRight="true"
                        android:text="Xbb01"
                        />
                </RelativeLayout>

                <View style="@style/DivideLine"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextHeader"
                        android:text="车辆识别号"
                        />
                    <TextView
                        android:id="@+id/my_car_detail_recognize_no_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextDesc"
                        android:layout_alignParentRight="true"
                        android:text="77985542"
                        />
                </RelativeLayout>

                <View style="@style/DivideLine"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextHeader"
                        android:text="行驶证登记日期"
                        />
                    <TextView
                        android:id="@+id/my_car_detail_date_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextDesc"
                        android:layout_alignParentRight="true"
                        android:text="2014.09.06"
                        />
                </RelativeLayout>

                <View style="@style/DivideLine_B"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextHeader"
                        android:text="保养记录"
                        />
                </RelativeLayout>

                <View style="@style/DivideLine"/>

                <com.proton.library.widget.MyListView
                    android:id="@+id/my_car_detail_list_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
