<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    >

    <LinearLayout
        android:id="@+id/item_my_car_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        >

        <ImageView
            android:id="@+id/item_my_car_logo_img"
            android:layout_width="@dimen/car_logo_width"
            android:layout_height="@dimen/car_logo_height"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/item_my_car_name_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="奔驰SLS AAA"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/item_my_car_red_tips_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="离保养还有7天"
                    android:textColor="@color/filter_red_txt" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                >

                <TextView
                    android:id="@+id/item_my_car_id_num_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="渝A.88888"
                    android:textColor="@color/mtf_gray_700" />

                <Button
                    android:id="@+id/item_my_car_do_maintenance_btn"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/btn_blue_border_selector_round_corner"
                    android:textColor="@color/blue"
                    android:text="去保养" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <View style="@style/DivideLine"/>
    <RelativeLayout
        android:id="@+id/item_my_car_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginTop="3dp"
        >
        <View
            android:id="@+id/item_my_car_rb_view"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/icon_radio_blue_sel"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/item_my_car_rb_view"
            android:layout_marginLeft="8dp"
            android:text="设为默认"
            />
        <TextView
            android:id="@+id/item_my_car_del_txt"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawableLeft="@mipmap/icon_mine_delete"
            android:text="删除"
            android:background="@drawable/white_gray_selector"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            />
    </RelativeLayout>
</LinearLayout>