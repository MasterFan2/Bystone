<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.proton.library.widget.MTFTitleView
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:titleBackground="@color/mtf_gray_900"
        app:titleText="开启保养提醒"
        app:titleTxtColor="@android:color/white"
        app:rightButtonText="确定"
        app:rightButtonBackground="@mipmap/icon_mine_pluscar"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/alert_label_pre_mileage_txt"
                style="@style/TextHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="上次保养里程" />
            <TextView
                android:layout_toRightOf="@id/alert_label_pre_mileage_txt"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                style="@style/TextDesc"
                android:text="(万公里)"
                />
            <EditText
                android:id="@+id/alert_previous_mileage_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:ems="10"
                android:gravity="right"
                android:background="@null"
                android:inputType="number"
                android:hint="请输入" />
        </RelativeLayout>

        <View style="@style/DivideLine" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                style="@style/TextHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="上次保养时间" />

            <TextView
                android:id="@+id/alert_date_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:ems="10"
                android:gravity="right"
                android:hint="请选择" />
        </RelativeLayout>

        <View style="@style/DivideLine" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                style="@style/TextHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="年里程" />

            <TextView
                android:id="@+id/alert_year_mileage_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:ems="10"
                android:gravity="right"
                android:hint="请选择" />
        </RelativeLayout>

        <View style="@style/DivideLine" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/alert_label_all_mileage_txt"
                style="@style/TextHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="总里程" />
            <TextView
                android:layout_toRightOf="@id/alert_label_all_mileage_txt"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                style="@style/TextDesc"
                android:text="(万公里)"
                />
            <EditText
                android:id="@+id/alert_all_mileage_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:ems="10"
                android:gravity="right"
                android:inputType="number"
                android:background="@null"
                android:hint="请输入" />
        </RelativeLayout>

        <View style="@style/DivideLine" />
    </LinearLayout>
</LinearLayout>
