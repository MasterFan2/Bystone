<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/shop_listview_item"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/ic_launcher"
                android:layout_centerVertical="true"

                />

            <TextView
                android:id="@+id/headline"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="美孚金美孚订单号合成机油的啥SN ow-40 1L1"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="90dp"


                />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已售"
                android:textSize="14sp"
                android:textColor="@color/somber"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="290dp"

                />
            <TextView
                android:id="@+id/print"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1024"
                android:textSize="14sp"
                android:textColor="@color/somber"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="320dp"

                />

<!--            <TextView
                android:id="@+id/prompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="让你的爱车每年少做一次保养你女女绿你打击对你"
                android:textSize="12sp"
                android:textColor="@color/zift"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="90dp"
                />-->
            <TextView
                android:id="@+id/rmb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="原价￥"
                android:textSize="13sp"
                android:textColor="#77a6f2"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="90dp"
                />
            <TextView
                android:id="@+id/money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="430.00"
                android:textSize="13sp"
                android:textColor="#77a6f2"
                android:layout_marginTop="60dp"
                android:layout_toRightOf="@id/rmb"

                />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="会员￥"
                android:textSize="13sp"
                android:textColor="@color/zift"
                android:layout_marginTop="60dp"
                android:layout_toRightOf="@id/rmb"
                android:layout_marginLeft="60dp"
                />
            <TextView
                android:id="@+id/member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="330.00"
                android:textSize="13sp"
                android:textColor="@color/zift"
                android:layout_marginTop="60dp"
                android:layout_toRightOf="@id/rmb"
                android:layout_marginLeft="100dp"
                />
            <TextView
                android:layout_width="70dp"
                android:layout_height="2dp"
                android:textColor="@color/zift"
                android:layout_above="@id/member"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="10dp"

                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_mai_line"
                android:layout_marginTop="100dp"
                />
        </RelativeLayout>
    </LinearLayout>





