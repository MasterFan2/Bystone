<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <com.proton.library.widget.MTFTitleView
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:rightButtonHide="true"
        app:titleBackground="@color/mtf_gray_900"
        app:titleText="商品列表"
        app:titleTxtColor="@android:color/white" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#ebebeb"

        />

    <RelativeLayout
        android:id="@+id/shop_yf"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/shop_cast"
            android:layout_width="15dp"
            android:layout_height="30dp"
            android:src="@mipmap/icon_merchant_price"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dp"

            />


        <TextView
            android:id="@+id/shop_jggd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="价格高低"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            />





        <TextView
            android:id="@+id/shop_good"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="好评优先"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginLeft="150dp"

            />
        <ImageView
            android:visibility="gone"
            android:id="@+id/shop_go"
            android:layout_width="15dp"
            android:layout_height="30dp"
            android:src="@mipmap/icon_merchant_price"
            android:layout_centerVertical="true"
            android:layout_marginLeft="220dp"

            />

        <TextView
            android:id="@+id/shop_rqzg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人气最高"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="15dp"

            />

        <ImageView
            android:id="@+id/shop_rq"
            android:visibility="gone"
            android:layout_width="15dp"
            android:layout_height="30dp"
            android:src="@mipmap/icon_merchant_price"
            android:layout_centerVertical="true"
            android:layout_marginLeft="340dp"

            />

        <TextView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#ebebeb"
            android:layout_marginLeft="125dp"

            />

        <TextView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#ebebeb"
            android:layout_marginLeft="243dp"

            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#ebebeb" />


    <ListView
        android:id="@+id/shop_commodity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"

        />

</LinearLayout>