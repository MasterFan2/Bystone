<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_return"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品列表"

            android:layout_centerVertical="true"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            />

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#ebebeb"

        />

    <RelativeLayout
        android:id="@+id/shop_yf"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        >


        <TextView
            android:id="@+id/shop_jggd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="价格高低"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            />

        <ImageView
            android:id="@+id/shop_cast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_merchant_price"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dp"

            />

        <TextView
            android:id="@+id/shop_good"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="好评优先"

            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginLeft="160dp"

            />
        <ImageView
            android:visibility="gone"
            android:id="@+id/shop_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_merchant_price"
            android:layout_centerVertical="true"
            android:layout_marginLeft="230dp"

            />

        <TextView
            android:id="@+id/shop_rqzg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人气最高"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="15dp"

            />

        <ImageView
            android:id="@+id/shop_rq"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_merchant_price"
            android:layout_centerVertical="true"
            android:layout_marginLeft="340dp"

            />

        <TextView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#ebebeb"
            android:layout_marginLeft="130dp"

            />

        <TextView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#ebebeb"
            android:layout_marginLeft="250dp"

            />



    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#ebebeb"

        />

    <ListView
        android:id="@+id/shop_commodity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        />

</LinearLayout>