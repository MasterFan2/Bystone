<?xml version="1.0" encoding="utf-8"?>

<!-- BBBBBBBBBBBBBBBB -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"

    >

    <ImageView
        android:id="@+id/item_maintain_servicing_logo_img"
        android:layout_width="176px"
        android:layout_height="152px"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        >

        <TextView
            android:id="@+id/item_maintain_servicing_title_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextHeader"
            android:text="重庆伟呈汽车修理厂" />

        <TextView
            android:id="@+id/item_maintain_servicing_desc_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            style="@style/TextDesc"
            android:text="很不错的修理厂哦。" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            >
            <RatingBar
                android:id="@+id/item_maintain_servicing_ratingbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/ratingBarStyleSmall"
                android:rating="4"
                android:layout_gravity="center_horizontal" />
            <TextView
                android:id="@+id/item_maintain_servicing_comment_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="38评价"
                android:layout_marginLeft="5dp"
                style="@style/TextDesc"
                android:layout_toRightOf="@id/item_maintain_servicing_ratingbar"
                />
            <TextView
                android:id="@+id/item_maintain_servicing_distance_place_txt"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextDesc"
                android:text="牛角沱 1.8km"
                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>