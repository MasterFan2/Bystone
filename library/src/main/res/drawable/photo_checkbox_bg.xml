<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape>
                    <corners android:radius="2dip" />
                    <padding android:bottom="-2dip" android:left="-2dip" android:right="-2dip" android:top="-2dip" />
                    <stroke android:width="1dip" android:color="@android:color/white" />

                </shape>
            </item>
            <item android:drawable="@mipmap/checkbox_marked">

            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item>
                <shape>
                    <corners android:radius="2dip" />
                    <padding android:bottom="-2dip" android:left="-2dip" android:right="-2dip" android:top="-2dip" />
                    <stroke android:width="1dip" android:color="@android:color/white" />
                </shape>
            </item>
            <item android:drawable="@mipmap/checkbox_normal" />
        </layer-list>
    </item>

</selector>