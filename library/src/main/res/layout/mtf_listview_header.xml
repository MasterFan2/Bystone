<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ProgressWheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom" >

    <RelativeLayout
        android:id="@+id/xlistview_header_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal"
        android:layout_height="60dp" >

        <com.proton.library.widget.listview.MTFProgress
            android:id="@+id/xlistview_header_progressbar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dip"
            ProgressWheel:barColor="@color/mtf_gray_600"
            ProgressWheel:barLength="35dp"
            ProgressWheel:barWidth="3dp"
            ProgressWheel:circleColor="@android:color/transparent"
            ProgressWheel:rimColor="#C8C8C8"
            ProgressWheel:rimWidth="3dp"
            ProgressWheel:spinSpeed="3dp"
            ProgressWheel:text=""
            ProgressWheel:textColor="#222222"
            ProgressWheel:textSize="14sp"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/xlistview_header_text"
            android:layout_toRightOf="@id/xlistview_header_progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/xlistview_header_hint_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/xlistview_header_hint_normal" />

            <TextView
                android:id="@+id/xlistview_header_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更新时间:从未"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>