<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/title_root_view"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="55dp">

    <com.proton.library.widget.MaterialRippleLayout
        android:id="@+id/m_title_left_layout"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        app:rippleAlpha="0.1"
        app:rippleColor="@color/colorPrimaryDark"
        app:rippleDelayClick="false"
        app:rippleHover="true"
        app:rippleOverlay="true">

        <TextView
            android:id="@+id/m_title_left_btn"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:drawableLeft="@drawable/ic_mtf_title_back"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:text="HEllo"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </com.proton.library.widget.MaterialRippleLayout>

    <com.proton.library.widget.MaterialRippleLayout
        android:id="@+id/m_title_right_layout"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        app:rippleAlpha="0.1"
        app:rippleColor="@color/colorPrimaryDark"
        app:rippleDelayClick="false"
        app:rippleHover="true"
        app:rippleOverlay="true">

        <TextView
            android:id="@+id/m_title_right_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            />
    </com.proton.library.widget.MaterialRippleLayout>

    <TextView
        android:id="@+id/m_title_context_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:text="标题"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.15dp"
        android:layout_alignParentBottom="true"
        android:background="@color/mtf_gray_500" />
</RelativeLayout>
